<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
    </style>

    <!-- Warna Icon Toolbar -->
    <style name="AppTheme.ToolbarIcon.Black" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- app:expandedTitleTextAppearance | app:collapsedTitleTextAppearance -->
    <style name="TransparentTextExpanded">
        <item name="android:textColor">@color/colorTransparent</item>
        <item name="android:textSize">0sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="TransparentTextCollapse">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="TransparentTextCollapseSizeFont">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
